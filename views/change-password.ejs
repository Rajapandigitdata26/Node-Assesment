<div class="layout">
  <div class="sidebar">
    <a href="/posts">All Posts</a>
    <a href="/posts/my">My Posts</a>
    <a href="/posts/create">Create Post</a>
  </div>
  <div class="main-content" style="display:flex;justify-content:center;align-items:center;min-height:70vh;">
    <form method="post" action="/change-password" style="margin:0 auto;">
      <input type="password" name="oldPassword" placeholder="Old Password" required />
      <input type="password" name="newPassword" placeholder="New Password" required />
      <button type="submit">Change Password</button>
      <% if (typeof error !== 'undefined') { %><div class="error"><%= error %></div><% } %>
    </form>
  </div>
</div>
